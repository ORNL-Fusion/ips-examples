# ======================================================================
# PLATFORM OVERRIDE SECTION
# ======================================================================

# HOST =
# MPIRUN =
# PHYS_BIN_ROOT =
# DATA_TREE_ROOT =

# ======================================================================
# USER DATA SECTION
# ======================================================================

USER_W3_DIR = $PWD/www 
USER_W3_BASEURL = 

# ======================================================================
# ROOT LOCATION
# ======================================================================

IPS_ROOT = $IPS_PATH
IPS_COMPONENTS_ROOT = $PWD/_exec

# ======================================================================
# SIMULATION INFO SECTION
# ======================================================================

RUN_ID = model_run
RUN_COMMENT = ABC_simulation

SIM_NAME = ABC_sim

OUTPUT_PREFIX =
LOG_FILE = log.warning
LOG_LEVEL = WARN  # DEBUG | INFO | WARN | ERROR | CRITICAL

SIM_ROOT = $PWD
SIM_INPUT_DIR= $PWD/_inputs

SIMULATION_MODE = NORMAL # NORMAL or RESTART
RESTART_TIME = LATEST # Float or LATEST
RESTART_ROOT = $SIM_ROOT

# ======================================================================
# PLASMA STATE SECTION
# ======================================================================

# Where to put plasma state files as the simulation evolves
PLASMA_STATE_WORK_DIR = $SIM_ROOT/work/plasma_state
ARCHIVE_STATE_ON_OUTPUT = TRUE

# Config variables defining simulation specific names for plasma state files
CURRENT_STATE = state.dat

# List of files that constitute the plasma state
PLASMA_STATE_FILES = $CURRENT_STATE X_dot_code.out Y_dot_code.out
# ======================================================================
# PORTS SECTION
# ======================================================================

[PORTS]

    NAMES = INIT DRIVER A_COMP B_COMP C_COMP

    # Required ports - DRIVER and INIT

    [[INIT]]
        IMPLEMENTATION = basic_init

    [[DRIVER]]
        IMPLEMENTATION = basic_driver

    [[A_COMP]]
        IMPLEMENTATION = A_comp

    [[B_COMP]]
        IMPLEMENTATION = B_comp

    [[C_COMP]]
        IMPLEMENTATION = C_comp

    # Monitor ports

    [[MONITOR]]
        IMPLEMENTATION = monitor_comp

# ======================================================================
# COMPONENT CONFIGURATION SECTION
# ======================================================================

[basic_init]
# Machine dependent config info
    BIN_PATH = $IPS_COMPONENTS_ROOT
    SCRIPT = $BIN_PATH/basic_init.py
# Static config info
    CLASS = init
    SUB_CLASS =
    NAME = basic_init
    NPROC = 1
    INIT_HELPER_CODE = 
    INPUT_FILES =
    OUTPUT_FILES =
    RESTART_FILES = $PLASMA_STATE_FILES
    PLASMA_STATE_FILES = $CURRENT_STATE X_dot_code.out Y_dot_code.out

 [basic_driver]
# Machine dependent config info
    BIN_PATH = $IPS_COMPONENTS_ROOT
    SCRIPT = $BIN_PATH/basic_driver.py
# Static config info
    CLASS = driver
    SUB_CLASS =
    NAME = basic_driver
    NPROC = 1
    INPUT_FILES =
    OUTPUT_FILES =
    RESTART_FILES =
    PLASMA_STATE_FILES = $CURRENT_STATE 

[A_comp]
# Machine dependent config info
    BIN_PATH = $IPS_COMPONENTS_ROOT
    SCRIPT = $BIN_PATH/A_component.py
    EXECUTABLE = $BIN_PATH/X_dot_code.py     # full path
# Static config info
    CLASS = A_comp
    SUB_CLASS =
    NAME = A_component
    NPROC = 1
    INPUT_DIR = $SIM_INPUT_DIR/X_dot_code_input
    INPUT_FILES = X_dot_code.in.broken.on.purpose
    OUTPUT_FILES = $INPUT_FILES X_dot_code.out
    PLASMA_STATE_FILES = $CURRENT_STATE X_dot_code.out
    RESTART_FILES = $INPUT_FILES
    X0 = 1.0
    a_lin = 1.0
    b_nonlin = 0.01

[B_comp]
# Machine dependent config info
    BIN_PATH = $IPS_COMPONENTS_ROOT
    SCRIPT = $BIN_PATH/B_component.py
    EXECUTABLE = $BIN_PATH/Y_dot_code.py     # full path
# Static config info
    CLASS = B_comp
    SUB_CLASS =
    NAME = B_component
    NPROC = 1
    INPUT_DIR = $SIM_INPUT_DIR/Y_dot_code_input/
    INPUT_FILES = Y_dot_code.in
    OUTPUT_FILES = $INPUT_FILES Y_dot_code.out
    PLASMA_STATE_FILES = $CURRENT_STATE Y_dot_code.out
    RESTART_FILES = $INPUT_FILES
    Y0 = 0.1
    c_lin = 0.5
    d_nonlin = 0.05
    
[C_comp]
# Machine dependent config info
    BIN_PATH = $IPS_COMPONENTS_ROOT
    SCRIPT = $BIN_PATH/C_component.py
    EXECUTABLE = $BIN_PATH/integrator.py      # full path
# Static config info
    CLASS = C_component
    SUB_CLASS =
    NAME = C_component
    NPROC = 1
    INPUT_DIR = $SIM_INPUT_DIR/integrator_input
    INPUT_FILES = integrator.in
    OUTPUT_FILES = $INPUT_FILES, integrator.out
    PLASMA_STATE_FILES = $CURRENT_STATE  X_dot_code.out Y_dot_code.out
    RESTART_FILES = $INPUT_FILES


# =============================================================================
# TIMELOOP SECTION
# =============================================================================

[TIME_LOOP]
    MODE = REGULAR
    START = 0.   # Float or $RESTART_TIME
    FINISH = 4. # Float or $RESTART_TIME + float
    NSTEP = 4

# =============================================================================
# CHECKPOINT SECTION
# =============================================================================

[CHECKPOINT]
   MODE = ALL
   PHYSTIME_INTERVAL = 0.5
   NUM_CHECKPOINT = -1
   PROTECT_FREQUENCY = 5
