# ======================================================================
# PLATFORM OVERRIDE SECTION
# ======================================================================

# HOST = 
# MPIRUN = 
# PHYS_BIN_ROOT =  
# DATA_TREE_ROOT =
# PORTAL_URL = 
# RUNID_URL  = 

# ======================================================================
# USER DATA SECTION
# ======================================================================

USER_W3_DIR = $PWD/www
USER_W3_BASEURL = 

# ======================================================================
# ROOT LOCATION
# ======================================================================

IPS_ROOT = $IPS_DIR
IPS_EXAMPLES_PATH = $IPS_DIR/ips-examples

# ======================================================================
# SIMULATION INFO SECTION
# ======================================================================

RUN_ID = myRun
RUN_COMMENT = Excellent work 
TOKAMAK_ID = ITER
SHOT_NUMBER = 12345

SIM_NAME = thisSim

OUTPUT_PREFIX = 
LOG_FILE = log.warning
LOG_LEVEL = INFO # DEBUG | INFO | WARN | ERROR | CRITICAL 

SIM_ROOT = $PWD
SIM_INPUT_DIR=  

SIMULATION_MODE = NORMAL # NORMAL or RESTART
RESTART_TIME = LATEST # Float or LATEST
RESTART_ROOT = $SIM_ROOT

# ======================================================================
# STATE SECTION
# ======================================================================

# Where to put plasma state files as the simulation evolves
STATE_WORK_DIR = 
ARCHIVE_STATE_ON_OUTPUT = FALSE

# Config variables defining simulation specific names for plasma state files

# List of files that constitute the plasma state
STATE_FILES = 

# ======================================================================
# PORTS SECTION
# ======================================================================

[PORTS]

    # The order here is the order in which they are run.

    NAMES = DRIVER WORKER 

    # Required ports - DRIVER and INIT   

    [[DRIVER]]
        IMPLEMENTATION = hello_world_driver 

    [[WORKER]]
        IMPLEMENTATION = hello_world

# ======================================================================
# COMPONENT CONFIGURATION SECTION
# ======================================================================

[hello_world_driver]
    CLASS = driver
    SUB_CLASS = 
    NAME = hello_driver 
    NPROC = 1
    BIN_PATH = $IPS_EXAMPLES_PATH
    INPUT_DIR = 
    INPUT_FILES = 
    OUTPUT_FILES =  
    SCRIPT = $IPS_EXAMPLES_PATH/hello-world/source/hello_driver.py

[hello_world]
    CLASS = workers 
    SUB_CLASS = 
    NAME = hello_worker 
    NPROC = 1
    BIN_PATH = $IPS_EXAMPLES_PATH
    INPUT_DIR = 
    INPUT_FILES = 
    OUTPUT_FILES =  
    SCRIPT = $IPS_EXAMPLES_PATH/hello-world/source/hello_worker.py


# =============================================================================
# TIMELOOP SECTION
# =============================================================================

[TIME_LOOP]
    MODE = REGULAR
    START = 0 #$RESTART_TIME # Float or $RESTART_TIME 
    FINISH = 1 #$RESTART_TIME + 18.0 # 3.5 # Float or $RESTART_TIME + float 
    NSTEP = 1 

# =============================================================================
# CHECKPOINT SECTION
# =============================================================================

[CHECKPOINT]
   MODE = ALL
   PHYSTIME_INTERVAL = 0.5 
   NUM_CHECKPOINT = -1 
   PROTECT_FREQUENCY = 5  


