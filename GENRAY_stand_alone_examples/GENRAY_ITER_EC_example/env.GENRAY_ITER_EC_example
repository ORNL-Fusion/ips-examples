# path to libraries needed by CompX codes
export LD_LIBRARY_PATH=/global/homes/y/ypetrov/pgplot.intel:/opt/intel/compilers_and_libraries_2019.3.199/linux/compiler/lib/intel64:/opt/intel/compilers_and_libraries_2019.3.199/linux/mkl/lib/intel64:$LD_LIBRARY_PATH

