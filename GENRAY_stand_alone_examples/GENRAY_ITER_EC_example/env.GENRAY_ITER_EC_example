######################

export ATOM=/project/projectdirs/atom
export ATOM_CORI=$ATOM/atom-install-cori

#####################################################################
# IPS paths (until atom-install-cori settles down this points to u2115)
#####################################################################

export IPS_DIR=/project/projectdirs/atom/users/u2115
